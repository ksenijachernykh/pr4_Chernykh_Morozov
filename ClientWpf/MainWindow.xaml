<Window x:Class="ClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Client" Height="500" Width="800" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <Border Grid.Row="0" 
                Background="#f0f0f0" 
                Padding="15" 
                Margin="0,0,0,10"
                BorderThickness="1"
                BorderBrush="#ccc">
            <StackPanel Orientation="Horizontal">
                <!-- Connection Settings -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="IP:" Width="25" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtIpAddress" Text="127.0.0.1" Width="100" Margin="0,0,15,0"/>

                    <TextBlock Text="Port:" Width="30" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPort" Text="5000" Width="60" Margin="0,0,15,0"/>
                </StackPanel>

                <!-- Login -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Login:" Width="40" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLogin" Width="120" Margin="0,0,15,0"/>

                    <TextBlock Text="Password:" Width="60" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="txtPassword" Width="120" Margin="0,0,15,0"/>
                </StackPanel>

                <!-- Connect Button -->
                <Button Content="Connect" Width="80" Click="BtnConnect_Click" Background="#0078d4" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- File Browser -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderThickness="1"
                BorderBrush="#ccc">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#f8f8f8" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#ccc">
                    <Grid>
                        <TextBlock Text="Серверная директория" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button x:Name="downloadBtn" Content="Загрузить файл" Width="120" HorizontalAlignment="Right" Click="Download" 
                                Background="#28a745" Foreground="White"/>
                    </Grid>
                </Border>

                <!-- File List -->
                <ListBox x:Name="lstDirectories" Grid.Row="1" Margin="10" MouseDoubleClick="lstDirectories_MouseDoubleClick"
                         BorderThickness="0" Background="Transparent"/>
            </Grid>
        </Border>
    </Grid>
</Window>